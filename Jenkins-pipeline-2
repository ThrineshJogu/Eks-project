pipeline {
    agent any

    stages {
        stage('Code') {
            steps {
                git branch: 'master', url: 'https://github.com/ThrineshJogu/Eks-project.git'
            }
        }

        stage('Deploy') {
            steps {
                withKubeConfig([credentialsId: 'your-kubeconfig-credentials-id']) {
                    sh 'kubectl apply -f manifests/'
                }
            }
        }
    }
}

